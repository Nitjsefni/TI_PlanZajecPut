 <h1>Listing events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Course</th>
      <th>Date of course</th>
      <th>Time of beginning</th>
      <th>Time of ending</th>
      <th>Lecture hall</th>
      <th>Additionl info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= Course.find(event.id_course).name %>
        <td><%= event.course_date %></td>
        <td><%= event.time_beginning %></td>
        <td><%= event.time_end %></td>
        <td><%= event.lecture_hall %></td>
        <td><%= event.addit_info %></td>
        
        <td><%= link_to 'Show', event,class: 'btn btn-primary btn-primary' %>
        <%= link_to 'Edit', edit_event_path(event), class: "btn btn-medium btn-warning" %>
        <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-medium  btn-danger" %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

