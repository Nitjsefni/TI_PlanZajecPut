 <h1>Listing courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Lecturer</th>
      <th>Place</th>
      <th>Description</th>
      <th>Grade</th>
      <th>Deans Group</th>
      <th>Subdeans Group</th>
      <th>Cycle</th>
      <th>Day of week</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.typ %></td>
        <td><%= course.lecturer %></td>
        <td><%= course.place %></td>
        <td><%= course.description %></td>
        <td><%= course.id_grade %></td>
        <td><%= course.id_deans_group %></td>
        <td><%= course.id_subdeans_group %></td>
        <td><%= course.cycle %></td>
        <td><%= course.day %></td>
        <td><%= link_to 'Show', course,class: 'btn btn-primary btn-primary' %>
        <%= link_to 'Edit', edit_course_path(course), class: "btn btn-medium btn-warning" %>
        <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-medium  btn-danger" %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
