<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Lecturer</th>
      <th>Place</th>
      <th>Description</th>
      <th>Date</th>
      <th>Time beg</th>
      <th>Time end</th>
      <th>Deans group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.typ %></td>
        <td><%= course.lecturer %></td>
        <td><%= course.place %></td>
        <td><%= course.description %></td>
        <td><%= course.date %></td>
        <td><%= course.time_beg %></td>
        <td><%= course.time_end %></td>
        <td><%= course.deans_group %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

